<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>standalone_build</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>

  	<!-- Config files -->
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>search.config</include>
        <include>configtemplate</include>
      </includes>
    </fileSet>

    <!-- Tensorflow models are included too. -->
    <fileSet>
    	<directory>${project.basedir}/tflow_models</directory>
    	<outputDirectory>tflow_models</outputDirectory>
    	<includes>
      		<include>*.*</include>
    	</includes>
  	</fileSet>

  	<!-- Executable jar. -->
  	<fileSet>
    	<directory>target</directory>
    	<outputDirectory></outputDirectory>
    	<includes>
      		<include>*jar-with-dependencies.jar</include>
    	</includes>
  	</fileSet>

  </fileSets>
</assembly>